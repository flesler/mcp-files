{
  "name": "mcp-files",
  "version": "1.0.2",
  "type": "module",
  "description": "A comprehensive MCP server providing helpful tools for AI agents like Cursor",
  "main": "dist/index.js",
  "bin": {
    "mcp-files": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "build:watch": "tsc --watch --incremental",
    "build:clean": "npx rimraf dist/* *.tsbuildinfo",
    "start": "dist/index.js",
    "start:check": "dist/index.js --check",
    "start:http": "TRANSPORT=http dist/index.js",
    "dev": "npm run ts -- src/index.ts",
    "dev:http": "TRANSPORT=http npm run dev",
    "inspect": "npx fastmcp inspect src/index.ts",
    "ts": "tsx",
    "eslint": "eslint --cache",
    "lint": "npm run eslint -- src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "lint:full": "npm run build && npm run lint",
    "test:unit": "npm run ts -- test/index.test.ts",
    "test": "npm run build:clean && npm run lint:full && SILENT=true npm run test:unit && npm run build && npm run start:check",
    "prepack": "npm test",
    "publish:dry": "npm pack --dry-run",
    "publish:npm": "npm publish",
    "publish:docker": "bin/docker-publish.sh",
    "publish:all": "npm run publish:npm && npm run publish:docker && npm run publish:test",
    "publish:test": "npx mcp-files --help",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "mcp",
    "cursor",
    "claude",
    "model-context-protocol",
    "code-analysis",
    "symbol-search",
    "text-replacement",
    "import-inspection",
    "notifications",
    "llm",
    "tools",
    "files"
  ],
  "author": "Ariel Flesler <aflesler@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flesler/mcp-files.git"
  },
  "homepage": "https://github.com/flesler/mcp-files#readme",
  "bugs": {
    "url": "https://github.com/flesler/mcp-files/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "fastmcp": "^3.9.0",
    "glob": "^11.0.3",
    "lodash": "^4.17.21",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
